extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Express Form

        // register form
        form(method='POST' action='/form')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text',  style='margin-bottom: 10px;' placeholder='Write your name: ' name='name')
          button.btn.btn-primary(type='submit',  style='margin-right: 15px;' name='status', value='add') Add Name
          button.btn.btn-primary(type='submit' name='status', value='remove') Clear Names
        ul
            each name in names
                li= name